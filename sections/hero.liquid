<div class="relative w-full">
  <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
    <div class="relative overflow-hidden rounded-2xl bg-[#111e21]">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/40 to-transparent z-10"></div>
        {%- if section.settings.image != blank -%}
          <img 
            src="{{ section.settings.image | image_url: width: 2000 }}" 
            alt="{{ section.settings.image.alt | escape }}"
            class="h-full w-full object-cover object-center"
            width="2000"
            height="1000"
          >
        {%- else -%}
          <div class="h-full w-full bg-cover bg-center" style="background-image: url('https://lh3.googleusercontent.com/aida-public/AB6AXuAa5UWtCQxf26_nzrUt2p8kfSiET8oI39vcwuinoEuIt0pupKhch0NVM4EuZr_T-qmbEwmudJeHSOZzneIzEWepUcYPnpfpm2hCRT97edriQ_cMs7MbuOyY91WFl7Vj3RP1SND_X2G0Eq1UOmzdZW-DZbPUlkNiY6R6s_Krhzwr2BQhApeq5vxv6mPj7Z-96C_9vuwjPexqlL4eSUnLrj94NR_tQ_Tl6nH5SpjcmgTgP9hTYSFz2heKyDXs8czl_8gpPv0ZzKW9isTG');"></div>
        {%- endif -%}
      </div>
      
      <div class="relative z-10 flex min-h-[500px] flex-col justify-center px-6 py-12 sm:px-12 lg:w-1/2">
        {%- if section.settings.badge != blank -%}
          <span class="mb-4 inline-block w-fit rounded-full bg-primary/20 px-3 py-1 text-xs font-bold uppercase tracking-wider text-primary border border-primary/30 backdrop-blur-sm">
            {{ section.settings.badge }}
          </span>
        {%- endif -%}
        
        <h1 class="mb-4 text-4xl font-black leading-tight tracking-tight text-white sm:text-5xl lg:text-6xl">
          {{ section.settings.title }}
        </h1>
        
        <p class="mb-8 text-lg font-light text-gray-200">
          {{ section.settings.text }}
        </p>
        
        <div class="flex flex-wrap gap-4">
          {%- if section.settings.button_1_label != blank -%}
            <a href="{{ section.settings.button_1_link }}" class="inline-flex h-12 items-center justify-center rounded-lg bg-primary px-8 text-base font-bold text-white transition-transform hover:scale-105 hover:bg-primary/90">
              {{ section.settings.button_1_label }}
            </a>
          {%- endif -%}
          
          {%- if section.settings.button_2_label != blank -%}
            <a href="{{ section.settings.button_2_link }}" class="inline-flex h-12 items-center justify-center rounded-lg bg-white/10 px-8 text-base font-bold text-white backdrop-blur-sm transition-colors hover:bg-white/20">
              {{ section.settings.button_2_label }}
            </a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "badge",
      "label": "Badge Text",
      "default": "New Vivah Collection"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Title",
      "default": "<p>Adorn Yourself <br/>in <span class=\"text-primary\">Tradition</span></p>"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Exquisite Jewellery for the Modern Indian Woman. From authentic Kundan craftsmanship to sparkling American Diamond sets."
    },
    {
      "type": "text",
      "id": "button_1_label",
      "label": "Primary Button Label",
      "default": "Shop New Arrivals"
    },
    {
      "type": "url",
      "id": "button_1_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "button_2_label",
      "label": "Secondary Button Label",
      "default": "View Categories"
    },
    {
      "type": "url",
      "id": "button_2_link",
      "label": "Secondary Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
