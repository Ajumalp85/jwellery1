<header class="sticky top-0 z-50 w-full border-b border-[#e7f1f3] dark:border-[#2a4045] bg-surface-light/95 dark:bg-surface-dark/95 backdrop-blur-sm">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between gap-4">
      <div class="flex items-center gap-2 shrink-0">
        <a href="{{ routes.root_url }}" class="flex items-center gap-2">
          <div class="flex size-8 items-center justify-center rounded-lg bg-primary/10 text-primary">
            <span class="material-symbols-outlined">diamond</span>
          </div>
          <h1 class="text-xl font-bold tracking-tight text-[#0e191b] dark:text-white">{{ shop.name }}</h1>
        </a>
      </div>
      
      <nav class="hidden lg:flex items-center gap-8">
        {%- for link in section.settings.menu.links -%}
          <a class="text-sm font-medium {% if link.title == 'Sale' %}text-red-500 hover:text-red-600 font-bold{% else %}text-[#0e191b] dark:text-gray-200 hover:text-primary{% endif %} transition-colors" href="{{ link.url }}">
            {{ link.title }}
          </a>
        {%- endfor -%}
      </nav>

      <div class="flex flex-1 items-center justify-end gap-4">
        <div class="hidden md:flex w-full max-w-xs relative">
          <form action="{{ routes.search_url }}" method="get" role="search" class="w-full">
            <input 
              class="w-full rounded-lg border-none bg-[#e7f1f3] dark:bg-[#23353b] py-2 pl-10 pr-4 text-sm text-[#0e191b] dark:text-white placeholder-gray-500 focus:ring-2 focus:ring-primary" 
              placeholder="Search for Kundan, Gold..." 
              type="text"
              name="q"
              value="{{ search.terms | escape }}"
            />
            <span class="material-symbols-outlined absolute left-3 top-2 text-gray-500 text-[20px]">search</span>
          </form>
        </div>
        
        <div class="flex items-center gap-2">
          {% if shop.customer_accounts_enabled %}
            <a href="{% if customer %}{{ routes.account_url }}{% else %}{{ routes.account_login_url }}{% endif %}" class="p-2 text-[#0e191b] dark:text-white hover:text-primary transition-colors rounded-full hover:bg-gray-100 dark:hover:bg-gray-800">
              <span class="material-symbols-outlined">person</span>
            </a>
          {% endif %}
          
          <button class="p-2 text-[#0e191b] dark:text-white hover:text-primary transition-colors rounded-full hover:bg-gray-100 dark:hover:bg-gray-800">
            <span class="material-symbols-outlined">favorite</span>
          </button>
          
          <a href="{{ routes.cart_url }}" class="p-2 text-[#0e191b] dark:text-white hover:text-primary transition-colors rounded-full hover:bg-gray-100 dark:hover:bg-gray-800 relative">
            <span class="material-symbols-outlined">shopping_bag</span>
            {%- if cart.item_count > 0 -%}
              <span class="absolute top-1 right-1 size-2 bg-red-500 rounded-full"></span>
            {%- endif -%}
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Main Menu"
    }
  ]
}
{% endschema %}
