<div class="w-full py-12 lg:py-16">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col gap-2 mb-10 text-center sm:text-left">
      <h2 class="text-3xl font-bold tracking-tight text-[#0e191b] dark:text-white sm:text-4xl">
        {{ section.settings.title }}
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl">
        {{ section.settings.subtitle }}
      </p>
    </div>
    
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {%- for block in section.blocks -%}
        <a href="{{ block.settings.collection.url | default: '#' }}" class="group relative overflow-hidden rounded-xl bg-surface-light dark:bg-surface-dark shadow-sm transition-all hover:shadow-md h-[300px]">
          <div class="absolute inset-0 bg-gray-200 overflow-hidden">
            {%- if block.settings.image != blank -%}
              <img 
                src="{{ block.settings.image | image_url: width: 800 }}" 
                alt="{{ block.settings.title | escape }}"
                class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
                width="800"
                height="600"
              >
            {%- else -%}
              <div class="h-full w-full bg-cover bg-center transition-transform duration-500 group-hover:scale-110" style="background-image: url('{{ block.settings.fallback_image_url }}');"></div>
            {%- endif -%}
          </div>
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>
          <div class="absolute bottom-0 left-0 p-6">
            <h3 class="text-xl font-bold text-white">{{ block.settings.title }}</h3>
            <p class="text-sm text-gray-200 mt-1">{{ block.settings.text }}</p>
          </div>
        </a>
      {%- endfor -%}
    </div>
  </div>
</div>

